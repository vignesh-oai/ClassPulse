{
  "name": "ecosystem_ui",
  "version": "5.0.16",
  "description": "",
  "main": "host/main.ts",
  "scripts": {
    "start": "pnpm run mcp:start",
    "mcp:start": "tsx --tsconfig tsconfig.mcp.json index.ts",
    "mcp:dev": "tsx watch --tsconfig tsconfig.mcp.json index.ts",
    "build": "tsx ./build-all.mts",
    "serve": "serve -s ./assets -p 4444 --cors",
    "dev": "pnpm run dev:all",
    "dev:all": "pnpm run build && concurrently --kill-others-on-fail --names \"ui,mcp\" --prefix-colors \"magenta,green\" \"pnpm run dev:ui:watch\" \"pnpm run dev:mcp\"",
    "dev:ui:watch": "chokidar \"ui/**/*\" \"build-all.mts\" \"tailwind.config.ts\" \"package.json\" -c \"pnpm run build\" --debounce 250",
    "dev:mcp": "dotenv -e .env -- sh -c 'PORT=${MCP_PORT:-8000} pnpm run mcp:dev'",
    "dev:vite": "vite --config vite.config.mts",
    "tsc": "tsc -b",
    "tsc:app": "tsc -p tsconfig.app.json",
    "tsc:mcp": "tsc -p tsconfig.mcp.json",
    "tsc:node": "tsc -p tsconfig.node.json",
    "dev:host": "vite --config vite.host.config.mts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@types/three": "^0.180.0",
    "@vitejs/plugin-react": "^4.5.2e",
    "autoprefixer": "10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0",
    "fast-glob": "^3.3.3",
    "postcss": "8.5.6",
    "serve": "^14.2.4",
    "tailwindcss": "4.1.11",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@openai/apps-sdk-ui": "^0.2.1",
    "@react-spring/three": "^10.0.1",
    "@react-three/drei": "^10.6.1",
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "clsx": "^2.1.1",
    "embla-carousel": "^8.0.0",
    "embla-carousel-react": "^8.0.0",
    "framer-motion": "^12.23.12",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.536.0",
    "mapbox-gl": "^3.14.0",
    "mermaid": "^11.9.0",
    "partial-json": "^0.1.7",
    "react": "^19.1.1",
    "react-datepicker": "^8.4.0",
    "react-dom": "^19.1.1",
    "react-intl": "^7.1.11",
    "react-router-dom": "^7.8.2",
    "three": "^0.179.1",
    "twilio": "^5.8.0",
    "ws": "^8.18.0",
    "zod": "^4.1.5",
    "zod-to-json-schema": "^3.25.1"
  }
}
