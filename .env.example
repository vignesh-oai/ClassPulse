# Optional: override MCP server port (defaults to 8000)
MCP_PORT=8000

# Optional: configure sqlite tool backing store and metadata.
# MCP_SQLITE_DB=./samples/sqlite/titanic.db
# MCP_SQLITE_METADATA=./samples/sqlite/titanic.yml
# Public HTTPS URL for Twilio callbacks (for local dev, use your ngrok URL)
PUBLIC_URL=

# OpenAI Realtime API config
OPENAI_API_KEY=
OPENAI_REALTIME_MODEL=gpt-realtime
OPENAI_REALTIME_VOICE=marin
OPENAI_REALTIME_TRANSCRIPTION_MODEL=gpt-4o-mini-transcribe
OPENAI_REALTIME_PROMPT_TEMPLATE=prompts/teacher-parent-absence-call.jinja
# Optional explicit fallback/override if template loading fails
OPENAI_REALTIME_SYSTEM_PROMPT=
# Optional: enable highly verbose bridge/session debug logs (1/true/yes/on)
CALL_DEBUG_VERBOSE=0

# Teacher outreach call context shown in widget and prompt template rendering
CALL_STUDENT_NAME=Sam
CALL_PARENT_NAME=Jerry
CALL_PARENT_RELATIONSHIP=father
CALL_PARENT_NUMBER_LABEL=Jerry's number on file
CALL_SCHOOL_NAME=Walnut Heights Elementary School, Walnut Creek, CA
CALL_TEACHER_ROLE=homeroom teacher

# Twilio Voice config
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_TO_NUMBER_DEFAULT=+16282897075

# Optional explicit secret for widget log viewer tokens
CALL_VIEWER_TOKEN_SECRET=
